set -g status-justify left

# Vim and tmux window switching
is_vim="ps -o state= -o comm= -t '#{pane_tty}' \
    | grep -iqE '^[^TXZ ]+ +(\\S+\\/)?g?(view|l?n?vim?x?|fzf)(diff)?$'"
bind -n C-h if-shell "$is_vim" "send-keys C-h"  "select-pane -L"
bind -n C-j if-shell "$is_vim" "send-keys C-j"  "select-pane -D"
bind -n C-k if-shell "$is_vim" "send-keys C-k"  "select-pane -U"
bind -n C-l if-shell "$is_vim" "send-keys C-l"  "select-pane -R"
bind -n "C-\\" if-shell "$is_vim" "send-keys C-\\\\"  "select-pane -l"

bind -T copy-mode-vi 'C-h' select-pane -L
bind -T copy-mode-vi 'C-j' select-pane -D
bind -T copy-mode-vi 'C-k' select-pane -U
bind -T copy-mode-vi 'C-l' select-pane -R
bind -T copy-mode-vi 'C-\' select-pane -l

# Define custom keys for Cmd+C and Cmd+V from ghostty
# User0 = Cmd+V (paste), User1 = Cmd+C (copy)
set -s user-keys[0] "\e[18;2~"
set -s user-keys[1] "\e[19;2~"

# Cmd+C from ghostty: if in vim, send ,y to yank visual selection to clipboard
bind-key -n User1 if-shell "$is_vim" 'send-keys ,y' ''

# Cmd+V from ghostty: if in vim, send ,p to paste from system clipboard; otherwise paste via tmux
# Cross-platform clipboard paste: tries pbpaste (macOS), wl-paste (Wayland), xclip, xsel
bind-key -n User0 if-shell "$is_vim" 'send-keys ,p' 'run-shell "pbpaste | tmux load-buffer -b clip - 2>/dev/null && tmux paste-buffer -b clip -d 2>/dev/null"'

# -- Nested tmux session support (F12 toggles outer tmux off/on) --------------
# When "off", all keys pass through to inner tmux. Status bar turns red.
# Press F12 again to re-enable outer tmux.

# Toggle off: switch to "off" key table, change status bar to indicate
bind-key -T root F12 \
  set prefix None \;\
  set key-table off \;\
  set status-style "bg=#8b0000,fg=#ffffff" \;\
  set status-left " üîª INNER TMUX ACTIVE - F12 to return " \;\
  set status-left-length 40 \;\
  set window-status-current-format "" \;\
  set window-status-format "" \;\
  refresh-client -S

# Toggle on: restore normal operation
bind-key -T off F12 \
  set -u prefix \;\
  set -u key-table \;\
  set -u status-style \;\
  set -u status-left \;\
  set -u status-left-length \;\
  set -u window-status-current-format \;\
  set -u window-status-format \;\
  refresh-client -S

bind C-l send-keys 'C-l'

bind e new-window -n 'tmux cfg' -e EDITOR="$EDITOR" \
  sh -c 'case "${EDITOR:-vim}" in *vim*) ${EDITOR:-vim} -c ":set syntax=tmux" "$TMUX_CONF_LOCAL";; *) $EDITOR "$TMUX_CONF_LOCAL";; esac && "$TMUX_PROGRAM" ${TMUX_SOCKET:+-S "$TMUX_SOCKET"} source "$TMUX_CONF" \; display "$TMUX_CONF_LOCAL sourced"'

